/* 班级封面 */
.cover {
  width: 100%;
  height: 200px;
}

/* 作业列表 */
.content {
  width: calc(100% - 48px);
  margin-top: 12px;
  display: flex;
  flex-direction: column;
}
.content .item {
  display: flex;
  padding: 0 24px;
  align-items: center;
  width: 100%;
  height: 72px;
  border: 1px solid #bbbbbb;
  overflow: hidden;
  border-radius: 20px;
  background-color: #fff;
  margin-top: 12px;
}
.content .item .icon {
  width: 50px;
  height: 50px;
  border-radius: 12px;
}
.content .item .info {
  margin-left: 12px;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.content .item .info .title {
  font-size: 40rpx;
}
.content .item .info .date {
  font-size: var(--font-size-help);
  font-weight: var(--font-weight-help-app);
  line-height: var(--line-height-help-app);
  color: var(--gray-scale-500-guide);
}
.content .item .status {
  margin-left: auto;
  width: 80px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 16px;
  border: #bbbbbb 1px solid;
  font-size: var(--font-size-help);
  font-weight: var(--font-weight-help-app);
  line-height: var(--line-height-help-app);
  text-align: center;
}
.content .item .status.green {
  background-color: var(--success);
}
.content .item .status.yellow {
  background-color: var(--warning);
}
.content .item .status.red {
  background-color: var(--error);
}

/* 签到和发布作业按钮 */
.btns {
  position: fixed;
  right: 16px;
  bottom: 60px;
  width: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: none;
}
.btns .item {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: solid 1px #bbbbbb;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 6rpx 10rpx rgba(0, 0, 0, 0.3);
}
.btns .item:not(:first-child) {
  margin-top: 8px;
}
