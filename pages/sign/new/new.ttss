.item {
  width: calc(100% - 48px);
  margin-top: 24px;
}

/* 发起签到按钮 */
.btn {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background-color: var(--primary);
  box-shadow: 0 4px 8px var(--box-shadow);
  color: var(--gray-scale-0);
  margin-top: 64px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}
