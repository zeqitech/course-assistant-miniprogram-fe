.item {
  margin-top: 24px;
}

/* 发起签到按钮 */
.btn {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background-color: var(--primary);
  box-shadow: 0 8px 12px var(--box-shadow);
  color: var(--gray-scale-0);
  margin-top: 24px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}

/* 签到记录列表 */
.list {
  margin-top: 24px;
  display: flex;
  flex-direction: column;
}
.list .item {
  margin-top: 12px;
  width: 100%;
}
