/* 签到记录列表 */
.list {
  width: calc(100% - 48px);
  margin-top: 12px;
  display: flex;
  flex-direction: column;
}
.list .item {
  margin-top: 12px;
}

/* 悬浮按钮 */
.btn {
  position: fixed;
  right: 16px;
  bottom: 60px;
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  border: 1px solid #bbbbbb;
  background-color: #fff;
  font-size: 28px;
}
